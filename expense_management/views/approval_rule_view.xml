<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_approval_rule_form" model="ir.ui.view">
    <field name="name">expense.approval.rule.form</field>
    <field name="model">expense.approval.rule</field>
    <field name="arch" type="xml">
      <form string="Approval Rule">
        <sheet>
          <group>
            <field name="name"/>
            <field name="approver_ids" widget="many2many_tags"/>
            <field name="percentage_threshold"/>
            <field name="specific_approver_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_approval_rule_tree" model="ir.ui.view">
    <field name="name">expense.approval.rule.tree</field>
    <field name="model">expense.approval.rule</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="percentage_threshold"/>
      </list>
    </field>
  </record>
  


  <!-- Action -->
  <record id="action_approval_rules" model="ir.actions.act_window">
      <field name="name">Approval Rules</field>
      <field name="res_model">expense.approval.rule</field>
      <field name="view_mode">list,form</field>
      <field name="target">current</field>
  </record>

  <!-- Submenu -->
  <menuitem id="menu_approval_rules"
            name="Approval Rules"
            parent="menu_expense"
            action="action_approval_rules"
            sequence="2" />
</odoo>