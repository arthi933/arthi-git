<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="custom_reset_template" name="Custom Reset Password">
		<t t-call="web.layout">
			<div class="oe_structure" style="text-align:center">
				<h2 style="font-weight: bold;
    font-size: 3em;
    margin: 1em 0em;">Reset Your Password</h2>
				<div>
					<style>
						/* Table styling for Odoo login pages */
						.o_login_table {
						width: 70%;
						margin: 60px auto;
						border-collapse: collapse;
						background: #ffffff; /* Match Odoo login theme */
						box-shadow: 0 0 5px rgba(0,0,0,0.1);
						font-family: "Roboto", sans-serif;
						}

						.o_login_table th,
						.o_login_table td {
						border: 1px solid #d3d3d3; /* light gray border */
						padding: 10px 15px;
						text-align: left;
						}

						.o_login_table th {
						background-color: #f5f5f5; /* subtle header background
						*/
						font-weight: 600;
						}

						.o_login_table tr:nth-child(even) {
						background-color: #fafafa; /* striped effect */
						}

					</style>
					<form class="reset_password_form" role="form" method="post"
						t-if="not message">
						<table
							class="table table-bordered table-striped my-table o_login_table " >
							<thead class="table-light">
								<tr >
									<th>User</th>
									<th>Role</th>
									<th>Manager</th>
									<th>Email</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>
										<select name="login_user"
											id="login_user"
											class="form-control form-control-sm"
											style="border: none;">
											<t
												t-foreach="request.env['res.users'].sudo().search([])"
												t-as="user">
												<t t-if="user_index == 0">
													<option value=""
														selected="1">Select
														User</option>
												</t>
												<option t-att-value="user.id">
													<t t-esc="user.name" />
												</option>
											</t>

										</select>
									</td>
									<td>

										<select name="role" id="role"
											class="form-control form-control-sm"
											style="border: none;">

											<option>Manager</option>
											<option>Employee</option>
										</select>
									</td>
									<td>
										<select name="manager" id="manager"
											class="form-control form-control-sm"
											style="border: none;">
											<t
												t-foreach="request.env['res.partner'].sudo().search([])"
												t-as="manager">
												<t t-if="manager_index == 0">
													<option value=""
														selected="1">Select
														Manager</option>
												</t>
												<option t-att-value="manager.id">
													<t t-esc="manager.name" />
												</option>
											</t>

										</select>
									</td>
									<td>
										<input type="text" name="email"
											id="email"
											class="form-control form-control-sm"
											autocapitalize="off"
											required="required"
											style="border: none;" />
									</td>
									<td>
										<button type="submit"
											class="btn btn-primary" style="background: #017E84;
    color: white;
    padding: 0.75em;
    border-radius: 5px;
    border: none;"
											t-attf-href="/expense_management/send_password?{{ keep_query() }}">Send
											Password</button>
									</td>
								</tr>

							</tbody>
						</table>
					</form>
				</div>

				<t t-if="error">
					<div class="alert alert-danger">
						<t t-esc="error" />
					</div>
				</t>
				<t t-if="message">
					<div class="alert alert-success">
						<t t-esc="message" />
					</div>
				</t>
			</div>
		</t>
	</template>
</odoo>
